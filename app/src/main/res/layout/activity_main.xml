<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <!-- Top Bar - Clean minimal header -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="24dp"
        android:paddingTop="20dp"
        android:paddingBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/text_primary"
                android:textSize="26sp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="-0.02" />

            <TextView
                android:id="@+id/subtitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/app_subtitle"
                android:textColor="@color/text_tertiary"
                android:textSize="13sp"
                android:letterSpacing="0.02" />

        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="14dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/card_stroke">

            <ImageButton
                android:id="@+id/settingsButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/settings"
                android:src="@drawable/ic_settings"
                app:tint="@color/text_secondary" />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <!-- Calibration Indicator (shows during vertical swipe) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/calibrationIndicatorCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0"
        app:cardBackgroundColor="@color/level_medium"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toTopOf="@id/displayContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBar">

        <TextView
            android:id="@+id/calibrationIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp"
            android:text="0.0 dB"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.02" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Main Display Container (switches between views) -->
    <FrameLayout
        android:id="@+id/displayContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toTopOf="@id/graphCard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBar">

        <!-- Digital View (default) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/digitalCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/card_stroke">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="28dp">

                <!-- Current dB Value -->
                <TextView
                    android:id="@+id/decibelText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/decibel_text"
                    android:textSize="112sp"
                    android:fontFamily="sans-serif-thin"
                    android:letterSpacing="-0.05"
                    app:layout_constraintBottom_toTopOf="@id/levelIndicator"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"
                    tools:text="65" />

                <!-- Unit Label -->
                <TextView
                    android:id="@+id/unitText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/decibel_unit"
                    android:textColor="@color/text_tertiary"
                    android:textSize="24sp"
                    android:fontFamily="sans-serif-light"
                    app:layout_constraintStart_toEndOf="@id/decibelText"
                    app:layout_constraintTop_toTopOf="@id/decibelText"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="32dp" />

                <!-- Level Indicator Badge -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/levelIndicatorCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:cardBackgroundColor="@color/level_low"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/decibelText"
                    app:layout_constraintBottom_toTopOf="@id/statsLayout">

                    <TextView
                        android:id="@+id/levelIndicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="28dp"
                        android:paddingVertical="10dp"
                        android:text="@string/level_quiet"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        android:textAllCaps="true"
                        android:letterSpacing="0.15" />

                </com.google.android.material.card.MaterialCardView>

                <!-- Stats Row -->
                <LinearLayout
                    android:id="@+id/statsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/levelIndicatorCard">

                    <!-- MIN -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/min_label"
                            android:textColor="@color/text_tertiary"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif-medium"
                            android:letterSpacing="0.1" />

                        <TextView
                            android:id="@+id/minText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="--"
                            android:textColor="@color/level_low"
                            android:textSize="32sp"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                    <!-- AVG -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/avg_label"
                            android:textColor="@color/text_tertiary"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif-medium"
                            android:letterSpacing="0.1" />

                        <TextView
                            android:id="@+id/avgText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="--"
                            android:textColor="@color/level_medium"
                            android:textSize="32sp"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                    <!-- MAX -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/max_label"
                            android:textColor="@color/text_tertiary"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif-medium"
                            android:letterSpacing="0.1" />

                        <TextView
                            android:id="@+id/maxText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="--"
                            android:textColor="@color/level_high"
                            android:textSize="32sp"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Speedometer View -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/speedometerCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/card_stroke">

            <com.soundmeter.app.SpeedometerView
                android:id="@+id/speedometerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp" />

        </com.google.android.material.card.MaterialCardView>

        <!-- VU Meter View -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/vuMeterCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/card_stroke">

            <com.soundmeter.app.VuMeterView
                android:id="@+id/vuMeterView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Circular Gauge View -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/circularCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/card_stroke">

            <com.soundmeter.app.CircularGaugeView
                android:id="@+id/circularGaugeView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp" />

        </com.google.android.material.card.MaterialCardView>

    </FrameLayout>

    <!-- Small spacer between display and graph -->
    <View
        android:id="@+id/sectionSpacer"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        app:layout_constraintTop_toBottomOf="@id/displayContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Real-time Graph -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/graphCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@color/card_background"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/card_stroke"
        app:layout_constraintBottom_toTopOf="@id/controlsContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sectionSpacer"
        app:layout_constraintHeight_max="180dp">

        <com.soundmeter.app.SoundWaveView
            android:id="@+id/soundWaveView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Control Buttons -->
    <LinearLayout
        android:id="@+id/controlsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Reset Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/resetButton"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginEnd="12dp"
            android:layout_weight="1"
            android:text="@string/reset"
            android:textSize="15sp"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.02"
            app:icon="@drawable/ic_reset"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconSize="20dp"
            app:cornerRadius="18dp"
            app:strokeWidth="1.5dp"
            app:strokeColor="@color/card_stroke" />

        <!-- Start/Stop Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/startStopButton"
            style="@style/Widget.Material3.Button"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1.5"
            android:text="@string/stop"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.02"
            app:icon="@drawable/ic_stop"
            app:iconTint="@color/white"
            app:iconGravity="textStart"
            app:iconPadding="10dp"
            app:iconSize="22dp"
            app:backgroundTint="@color/level_danger"
            app:cornerRadius="18dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
