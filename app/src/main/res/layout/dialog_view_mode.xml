<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background"
    android:paddingTop="28dp">

    <!-- Header with icon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="24dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardBackgroundColor="@color/primary"
            app:cardCornerRadius="14dp"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_view_mode"
                app:tint="@color/white" />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/view_mode"
            android:textColor="@color/text_primary"
            android:textSize="22sp"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="-0.02" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingHorizontal="24dp"
        android:text="@string/view_mode_description"
        android:textColor="@color/text_secondary"
        android:textSize="14sp" />

    <!-- View mode options -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="16dp"
        android:paddingBottom="20dp">

        <!-- Digital -->
        <LinearLayout
            android:id="@+id/optionDigital"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/view_mode_item_background"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="16dp"
            android:layout_marginBottom="8dp">

            <FrameLayout
                android:layout_width="28dp"
                android:layout_height="28dp">

                <ImageView
                    android:id="@+id/checkDigital"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_radio_checked"
                    android:visibility="gone"
                    app:tint="@color/primary" />

                <ImageView
                    android:id="@+id/uncheckDigital"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_radio_unchecked"
                    app:tint="@color/text_tertiary" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/view_digital"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/view_digital_desc"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Speedometer -->
        <LinearLayout
            android:id="@+id/optionSpeedometer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/view_mode_item_background"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="16dp"
            android:layout_marginBottom="8dp">

            <FrameLayout
                android:layout_width="28dp"
                android:layout_height="28dp">

                <ImageView
                    android:id="@+id/checkSpeedometer"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_radio_checked"
                    android:visibility="gone"
                    app:tint="@color/primary" />

                <ImageView
                    android:id="@+id/uncheckSpeedometer"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_radio_unchecked"
                    app:tint="@color/text_tertiary" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/view_speedometer"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/view_speedometer_desc"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- VU Meter -->
        <LinearLayout
            android:id="@+id/optionVuMeter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/view_mode_item_background"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="16dp"
            android:layout_marginBottom="8dp">

            <FrameLayout
                android:layout_width="28dp"
                android:layout_height="28dp">

                <ImageView
                    android:id="@+id/checkVuMeter"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_radio_checked"
                    android:visibility="gone"
                    app:tint="@color/primary" />

                <ImageView
                    android:id="@+id/uncheckVuMeter"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_radio_unchecked"
                    app:tint="@color/text_tertiary" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/view_vu_meter"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/view_vu_meter_desc"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Circular -->
        <LinearLayout
            android:id="@+id/optionCircular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/view_mode_item_background"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="16dp">

            <FrameLayout
                android:layout_width="28dp"
                android:layout_height="28dp">

                <ImageView
                    android:id="@+id/checkCircular"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_radio_checked"
                    android:visibility="gone"
                    app:tint="@color/primary" />

                <ImageView
                    android:id="@+id/uncheckCircular"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_radio_unchecked"
                    app:tint="@color/text_tertiary" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/view_circular"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/view_circular_desc"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
