<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background">

    <!-- Header with icon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="24dp"
        android:paddingTop="24dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_view_mode"
            app:tint="@color/primary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/view_mode"
            android:textColor="@color/text_primary"
            android:textSize="22sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="24dp"
        android:text="@string/view_mode_description"
        android:textColor="@color/text_secondary"
        android:textSize="14sp" />

    <!-- View mode options -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:paddingBottom="16dp">

        <!-- Digital -->
        <LinearLayout
            android:id="@+id/optionDigital"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="24dp"
            android:paddingVertical="14dp">

            <ImageView
                android:id="@+id/checkDigital"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_radio_checked"
                android:visibility="gone"
                app:tint="@color/primary" />

            <ImageView
                android:id="@+id/uncheckDigital"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_radio_unchecked"
                app:tint="@color/text_secondary" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/view_digital"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/view_digital_desc"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Speedometer -->
        <LinearLayout
            android:id="@+id/optionSpeedometer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="24dp"
            android:paddingVertical="14dp">

            <ImageView
                android:id="@+id/checkSpeedometer"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_radio_checked"
                android:visibility="gone"
                app:tint="@color/primary" />

            <ImageView
                android:id="@+id/uncheckSpeedometer"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_radio_unchecked"
                app:tint="@color/text_secondary" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/view_speedometer"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/view_speedometer_desc"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- VU Meter -->
        <LinearLayout
            android:id="@+id/optionVuMeter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="24dp"
            android:paddingVertical="14dp">

            <ImageView
                android:id="@+id/checkVuMeter"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_radio_checked"
                android:visibility="gone"
                app:tint="@color/primary" />

            <ImageView
                android:id="@+id/uncheckVuMeter"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_radio_unchecked"
                app:tint="@color/text_secondary" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/view_vu_meter"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/view_vu_meter_desc"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Circular -->
        <LinearLayout
            android:id="@+id/optionCircular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="24dp"
            android:paddingVertical="14dp">

            <ImageView
                android:id="@+id/checkCircular"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_radio_checked"
                android:visibility="gone"
                app:tint="@color/primary" />

            <ImageView
                android:id="@+id/uncheckCircular"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_radio_unchecked"
                app:tint="@color/text_secondary" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/view_circular"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/view_circular_desc"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
